<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/welcome_background</item>
        <item name="android:fontFamily">@font/monsterrat</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/color_button</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="backgroundTint">@color/colorTransparent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/textButtonSize</item>
        <item name="android:textColor">@color/color_button</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/textTitleSize</item>
    </style>

    <style name="TitleBoldText" parent="TitleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">@color/colorGrayLight</item>
        <item name="android:textSize">@dimen/textSubtitleSize</item>
    </style>

    <style name="IconImage">
        <item name="android:background">@drawable/icon_background</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>